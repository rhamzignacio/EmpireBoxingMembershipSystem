        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="170,4,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click" Height="20"/>
        <Button x:Name="btnDelete" Content="Activate/Deactive" HorizontalAlignment="Left" Margin="250,4,0,0" VerticalAlignment="Top" Width="114" Click="btnDelete_Click"  Height="20" Background="#FFFFC1C1"/>
        <Button x:Name="btnNew" Content="New" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="75" Click="btnNew_Click_1"  Height="20"/>

    </Grid>
</Window>
